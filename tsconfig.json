{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/context/*": ["context/*"],
      "@/utils/*": ["utils/*"],
      "@/public/*": ["public/*"],
      "@/hooks/*": ["hooks/*"],
      "@/lib/*": ["lib/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/api/webhooks/route.js",
    "pages/test.tsx",
    "pages/test.tsx",
    "components/Elements/Popover.tsx",
    ".next/types/**/*.ts",
    "utils/PropFilter.js",
    "app/categories/[slug]/layout.js",
    "app/api/video/route.js"
  ],
  "exclude": ["node_modules"]
}
