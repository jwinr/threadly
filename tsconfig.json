{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/app/*": ["src/app/*"],
      "@/types/*": ["src/types/*"],
      "@/components/*": ["src/components/*"],
      "@/layout/*": ["src/layout/*", "./threadly-backend/layout/*"],
      "@/context/*": ["src/context/*"],
      "@/utils/*": ["src/utils/*", "./threadly-backend/utils/*"],
      "@/public/*": ["./public/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/lib/*": ["src/lib/*", "./threadly-backend/lib/*"],
      "@/api/*": ["./threadly-backend/services/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es2020",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "svgr.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "*.mjs"
  ],
  "exclude": ["node_modules"]
}
